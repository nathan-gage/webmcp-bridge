{
  "name": "webmcp-bridge-monorepo",
  "private": true,
  "workspaces": [
    "cli"
  ],
  "type": "module",
  "scripts": {
    "dev": "bun run cli/src/index.ts",
    "build": "cd cli && bun run build",
    "test": "bun test test/cli test/extension",
    "test:watch": "bun test --watch test/cli test/extension",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "format": "oxfmt",
    "format:check": "oxfmt --check",
    "typecheck": "tsgo --noEmit -p cli/tsconfig.json",
    "test:node": "vitest run",
    "test:e2e": "bun run test/e2e.ts",
    "test:e2e:pw": "bun run build && playwright test",
    "test:e2e:install": "npx @puppeteer/browsers install chrome@canary --path .chrome-for-testing",
    "clean": "rm -rf cli/dist"
  },
  "devDependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@playwright/test": "^1.52.0",
    "@puppeteer/browsers": "^2.10.0",
    "@types/ws": "^8.18.1",
    "@typescript/native-preview": "^7.0.0-dev.20260210.1",
    "bun-types": "latest",
    "oxfmt": "^0.31.0",
    "oxlint": "^1.46.0",
    "typescript": "^5.7",
    "vitest": "^3.0.0",
    "ws": "^8.18.0"
  }
}
